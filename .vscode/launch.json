{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Next.js (dev)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    },
    {
      "name": "Attach: Next.js (9229)",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "timeout": 20000
    },
    {
      "name": "Open Chrome to http://localhost:3000",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Debug: Next.js + Chrome",
      "configurations": [
        "Launch Next.js (dev)",
        "Open Chrome to http://localhost:3000"
      ]
    }
  ]
}